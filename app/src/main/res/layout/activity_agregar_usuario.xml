<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.quicktrade.Agregar_usuario"
    android:background="#3E85B0">

    <TextView
        android:id="@+id/textNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editNombreUsuario"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:text="Nombre de Usuario"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="71dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editNombreUsuario"
        android:text="Correo"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textCorreo"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editNombre"
        android:layout_below="@+id/editCorreo"
        android:layout_marginTop="19dp"
        android:text="Nombre"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textApellidos"
        android:layout_below="@+id/editCorreo"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textApellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textDireccion"
        android:layout_below="@+id/editNombre"
        android:layout_marginTop="16dp"
        android:text="Apellidos"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editApellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editNombre"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editApellidos"
        android:layout_marginTop="28dp"
        android:text="Direccion"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textApellidos"
        android:layout_below="@+id/editApellidos"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/botonAnadirUsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ListView"
        android:layout_marginTop="38dp"
        android:layout_toEndOf="@+id/textCorreo"
        android:text="AÃ±adir" />

    <ListView
        android:id="@+id/ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editDireccion"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/editApellidos" />

    <Button
        android:id="@+id/botonModificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/botonAnadirUsu"
        android:layout_below="@+id/botonAnadirUsu"
        android:layout_marginTop="15dp"
        android:text="MODIFICAR" />


</RelativeLayout>
